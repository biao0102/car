<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/rly_home_act_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        layout="@layout/view_base_title" />

    <include
        android:id="@+id/rly_home_act_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="44.0dip"
        android:layout_below="@+id/rly_home_act_title_layout"
        layout="@layout/view_home_tab_layout"
        android:background="@color/color_f3f3f3" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rly_home_act_tab_layout"
        android:orientation="vertical" >
    </FrameLayout>

</RelativeLayout>