<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_for_all" >

    <include
        android:id="@+id/rly_home_act_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        layout="@layout/view_base_title" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rly_home_act_title_layout"
        android:layout_marginBottom="48.0dip"
        android:orientation="vertical" >
    </FrameLayout>

    <include
        android:id="@+id/ll_base_bottom_layou"
        android:layout_width="match_parent"
        android:layout_height="48.0dip"
        android:layout_alignParentBottom="true"
        layout="@layout/view_base_bottom_bar" />

</RelativeLayout>